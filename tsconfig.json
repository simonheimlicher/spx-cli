{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@scripts/*": ["./scripts/*"],
      "@test/*": ["./tests/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node", "vitest/globals"]
  },
  "exclude": ["node_modules", "dist", "docs/**/*", "vite.config.mts", "tests/fixtures/**/*"],
  "include": ["src/**/*", "bin/**/*", "scripts/**/*", "tests/**/*", "specs/**/*"],
  // This tells ts-node to pre-load tsconfig-paths
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
